<section class="signup">
  <div class="signup_form hero-unit">
    <h2 class="title">Login</h2>
    <%= form_for @user_session, :html => { :class => 'form-horizontal' }  do |f| %>
        <% if @user_session.errors.any? %>
          <div id="" class="notification_error">
           <h2>Check the following <%=pluralize(@user_session.errors.count, "error") %> </h2>

            <ul>
            <% @user_session.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="control-group">
          <%= f.label :email, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :email, :class => 'text_field' %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password, :class => 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, :class => 'password_field' %>
          </div>
        </div>


        <%= f.submit "Login", :class => 'btn btn-primary btn-large btn-block' %>
       <% end %>
  </div>
</section>