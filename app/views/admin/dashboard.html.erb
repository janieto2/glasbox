<section class="admin content clearfix">
	<h2>Admin Dashboard</h2>

	<!-- Users -->
	<div class="well span3">
		<h4> <i class="icon-user icon-large"></i> Users </h4>
		<p> Manage Users: Users willl be able to access the admin dashboard
			and will be able to manage all admin functions. 
		</p>
		<div class="btn-group">
			<%= link_to "Users", users_path, :class => "btn span12  btn-primary" %>

		  <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
		    <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu">
		    <li><%= link_to 'Users', users_path %></li>
		    <li><%= link_to 'Add a User', new_user_path %></li>
		  </ul>
		</div>
	</div>

	<!-- Events -->
	<div class="well span3">
		<h4> <i class="icon-home icon-large"></i> Events </h4>
		<p> Manage Properties: Properties are what visitors to the site
			will want to come and see. Make sure you add properties often.
		</p>
		<div class="btn-group">
			<%= link_to "Events", :events_admin_path, :class => "btn span12  btn-primary" %>

		  <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
		    <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu ">
		    <li><%= link_to 'Events', :events_admin_path %></li>
		    <li><%= link_to 'Add an Event', new_event_path %></li>
		  </ul>
		</div>
	</div>

	<!-- Members -->
	<div class="well span3">
		<h4> <i class="icon-comment-alt icon-large"></i> Members </h4>
		<p> Manage Members: Members about your company is important to establish 
			the legitimacy of your website to visitors and search engins. Make
			sure to add news often. 
		</p>
		<div class="btn-group">
			<%= link_to "Members", :member_admin_path, :class => "btn span12  btn-primary" %>

		  <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
		    <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu ">
		    <li><%= link_to 'List Members', :member_admin_path %></li>
		    <li><%= link_to 'New Member', new_member_path %></li>
		  </ul>
		</div>
	</div>
</section>