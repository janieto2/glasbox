<!-- Start Alerts -->
<div class="alerts">
  <% if flash[:alert] %>
    <div class="alert alert-error alert-block fade in">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <h4>Oh Snap!</h4>
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="alert alert-info alert-block fade in">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <h4><%= flash[:notice] %></h4>
    </div>
  <% end %>

  <% if flash[:success] %>
    <div class="alert alert-success alert-block fade in">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <h4>Success!</h4>
      <p><%= flash[:success] %></p>
    </div>
  <% end %>
</div><!-- End Alerts -->