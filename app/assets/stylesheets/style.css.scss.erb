.button_rm{
	width: 100px;
	height: 25px;
	border: 1px solid #118ec8;
	color: #fff;
	padding: 5px 10px;
	border-radius: 5px;
	margin-left: 55%;
	position: relative;
	top: -15px;

	background: #84d0f8; /* Old browsers */
	background: -moz-linear-gradient(top,  #84d0f8 0%, #4cb6e8 15%, #339fd9 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#84d0f8), color-stop(15%,#4cb6e8), color-stop(100%,#339fd9)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  #84d0f8 0%,#4cb6e8 15%,#339fd9 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  #84d0f8 0%,#4cb6e8 15%,#339fd9 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top,  #84d0f8 0%,#4cb6e8 15%,#339fd9 100%); /* IE10+ */
	background: linear-gradient(to bottom,  #84d0f8 0%,#4cb6e8 15%,#339fd9 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#84d0f8', endColorstr='#339fd9',GradientType=0 ); /* IE6-9 */


}
.button_rm:hover {
	color: #fff;
	text-decoration: none;
}

