.membership #membership_table{
	width: 600px;
	height:  675px;
	float: left;
}

.membership form{
	width: initial;
	width: auto;
}

.membership #membership_table .table{
	width: 130px;
	height: 100%;
	float: left;
	margin-right: 20px;
}
.membership #membership_table button{
	padding: 10px 35px 10px 35px;
	margin-left: 6px;
	margin-top: 10px;
	cursor: pointer;
	background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#61a2c9), to(#2b7aaa));
	background: -moz-linear-gradient(19% 75% 90deg,#61A2C9, #2b7aaa);
	background-color: #3B88B7;
	border: none;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	font-size: 13px;
	border: 1px solid gray;
	color: white;

}

.membership #membership_table .plan_label{
	padding: 10px 10px 10px 14px;
	font-size: 18px;
	font-variant: small-caps;
	background-color: #DEDEDE;
	text-align: center;

}

.membership #membership_table .plan_cost{
	background-color: #EFEFEF;
	text-align: center;
	padding: 41px 0px 31px 0px;
	color: #08C;
	font-variant: small-caps;
}

.membership #membership_table .plan_details{
	padding-top: 30px;
	padding-bottom: 40px;
	background-color: #e8e8e8;	
}

.membership #membership_table .plan_details p{
	text-align: center;
	text-transform: uppercase;
	font-weight: bold;
	color: #444;
	margin-bottom: 19px;
}

.membership #membership_table .plan_details .detail_3{
	padding-top: 35px;
	padding-bottom: 39px;
}

.membership #membership_table .plan_details .detail_5{
	padding-top: 10px;
	padding-bottom: 16px;

}

.membership #membership_table .plan_details .detail_6{
	padding-bottom: 40px;
}

.membership #membership_table .plan_cost #cost{
	font-size: 60px;
}

